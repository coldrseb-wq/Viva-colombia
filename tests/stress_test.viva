        println("a is positive and less than b");
    }
}

// === PHASE 5: User-defined Functions ===
println("=== Phase 5: Functions ===");

funcion sumar(p1, p2) {
    decreto resultado = p1 + p2;
    println(resultado);
}

funcion factorial(n) {
    si (n <= 1) {
        println(1);
    } sino {
        decreto f = 1;
        decreto i = 2;
        mientras (i <= n) {
            f = f * i;
            i = i + 1;
        }
        println(f);
    }
}

sumar(100, 200);
println("Factorial of 5:");
factorial(5);

